{
    "compilerOptions": {
        "declaration": true,
        "lib": [
            "es2017"
        ],
        "moduleResolution": "node",
        "module": "commonjs",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "target": "es2017",
        "outDir": "dist",
        "strict": false,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
